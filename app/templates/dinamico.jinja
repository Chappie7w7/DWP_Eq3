{% extends "base.jinja" %}

{% block title %}{{ titulo | default("MÃ³dulo") }}{% endblock %}

{% block content %}
<!-- Breadcrumb dinÃ¡mico -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        {% for item in breadcrumb %}
            {% if item.url %}
                <li class="breadcrumb-item"><a href="{{ item.url }}">{{ item.name }}</a></li>
            {% else %}
                <li class="breadcrumb-item active" aria-current="page">{{ item.name }}</li>
            {% endif %}
        {% endfor %}
    </ol>
</nav>

<!-- Campo de bÃºsqueda -->
<div class="search-bar-container">
    <form method="GET" action="{{ url_for('main.buscar', modulo=titulo.lower()) }}" class="search-bar">
        <div class="input-group">
            <input 
                type="text" 
                class="form-control" 
                name="simple_query"  
                placeholder="Buscar en {{ titulo | default('este mÃ³dulo') }}..." 
                value="{{ request.args.get('simple_query', '') }}"
                aria-label="Buscar"
            >
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
</div>

<!-- Contenedor de secciones -->
<div class="container">
    <h1 class="text-center">{{ titulo }}</h1>

    <!-- ðŸ”„ Spinner visible solo mientras carga -->
    <div id="loading-secciones" class="text-center my-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>


    <div id="secciones-container" class="row mt-4">

    </div>
</div>

<script>
    const permisosUsuario = {{ session.get('permisos', []) | tojson }};
</script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        fetch(window.location.href, { cache: "reload" });
    });
</script>


{% endblock %}
