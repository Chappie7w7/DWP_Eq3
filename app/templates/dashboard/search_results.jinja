{% extends 'base.jinja' %}

{% block title %}Resultados de Búsqueda{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Resultados para "{{ query }}" en el módulo "{{ modulo | capitalize }}"</h1>
    <ul>
        {% for result in results %}
            <li>{{ result.nombre }}</li>
        {% else %}
            <p>No se encontraron resultados en este módulo.</p>
        {% endfor %}
    </ul>
    <a href="{{ url_for('main.mostrar_modulo', modulo=modulo) }}">Volver al módulo</a>
</div>
{% endblock %}
