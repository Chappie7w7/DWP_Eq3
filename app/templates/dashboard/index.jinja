{% extends 'base.jinja' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="login-container">
    <div class="login-content">
        <p class="text-center">
            <i class="fas fa-user-circle fa-5x" style="color: white;"></i>
        </p>
        <p class="text-center" style="color: #004f45;">Log in with your account</p>
        <form action="">
            <div class="form-group">
                <label for="UserName" class="bmd-label-floating"><i class="fas fa-user-secret"></i> &nbsp; User</label>
                <input type="text" class="form-control" id="UserName">
            </div>
            <div class="form-group">
                <label for="UserPassword" class="bmd-label-floating"><i class="fas fa-key"></i> &nbsp; Password</label>
                <input type="password" class="form-control" id="UserPassword">
            </div>
            <a href="{{ url_for('inicio') }}" class="btn-login text-center">LOG IN</a>
        </form>
    </div>
</div>
{% endblock %}
