{% extends "base.jinja" %}

{% block content %}
<h2>Agregar Nuevo Proyecto</h2>

<form method="POST" action="{{ url_for('proyecto.agregar_proyecto') }}"> 
    <label for="nombre">Nombre del Proyecto:</label>
    <input type="text" name="nombre" required>

    <label for="descripcion">Descripción:</label>
    <textarea name="descripcion" required></textarea>

    <label for="modulo_id">Módulo:</label>
    <select name="modulo_id" required>
        <option value="">Selecciona un módulo</option>
        <option value="1">Materias</option>
        <option value="2">Juegos</option>
        <option value="3">Proyectos</option>
    </select>

    <button type="submit">Agregar Proyecto</button>
</form>

<a href="{{ url_for('proyecto.listar_proyectos') }}">Volver a la lista</a>
{% endblock %}
